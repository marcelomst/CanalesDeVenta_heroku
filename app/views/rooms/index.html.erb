<h1>Listing rooms</h1>

<table>
  <thead>
    <tr>
      <th>Id room</th>
      <th>Id reserva</th>
      <th>Occupancy</th>
      <th>Status</th>
      <th>ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.id_room %></td>
        <td><%= room.reserva_id %></td>
        <td><%= room.occupancy %></td>
        <td><%= room.status %></td>
        <td><%= room.id %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

